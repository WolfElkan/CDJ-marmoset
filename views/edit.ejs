<!DOCTYPE html>
<html>
	<head>
		<title>Marmosets | Edit</title>
	</head>
	<body>
		<h2>Edit Marmoset</h2>
		<form action="/marms/<%= marmosets[0].id %>" method="post">
			<table>
				<tr>
					<td>Name:</td>
					<td>
						<input 
						type="text" 
						name="name"
						value="<%= marmosets[0].name %>" 
						>
					</td>
				</tr>
				<tr>
					<td>Age:</td>
					<td>
						<input 
						type="number" 
						name="age"
						value="<%= marmosets[0].age %>" 
						> months
					</td>
				</tr>
				<tr>
					<td>Weight:</td>
					<td>
						<input 
						type="number" 
						name="weight"
						value="<%= marmosets[0].weight %>" 
						> ounces
					</td>
				</tr>
				<tr>
					<td>Color:</td>
					<td>
						<input 
						type="text" 
						name="color"
						value="<%= marmosets[0].color %>" 
						>
					</td>
				</tr>
			</table>
			<input type="submit" value="Save">
		</form>
	</body>
</html>